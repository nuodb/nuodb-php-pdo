  $nuotestport = getenv("NUOTESTPORT");
  if (! $nuotestport) {
      $nuotestport = "48004";
  }

  $url = "nuodb:database=test@localhost:" . $nuotestport . ";schema=PDOTEST";
  try {
    $db = new PDO($url, $user, $password) or die;
    $db->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
  }
  catch(PDOException $e) {
    echo "FAILED: ";
    echo $e->getMessage();
  }
  return $db;
}


